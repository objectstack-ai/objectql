{
  "name": "objectql-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm objectql:tracker",
    "build": "turbo run build",
    "build:legacy": "tsc -b && pnpm -r run build",
    "clean": "rm -rf dist packages/*/dist packages/*/node_modules node_modules",
    "test": "pnpm run check-versions && turbo run test --concurrency=1",
    "test:legacy": "pnpm run check-versions && pnpm -r run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "cli:dev": "ts-node packages/tools/cli/src/index.ts",
    "objectql": "tsx packages/tools/cli/src/index.ts",
    "objectql:tracker": "pnpm objectql dev -d examples/showcase/project-tracker/src",
    "objectql:erp": "pnpm objectql dev -d examples/showcase/enterprise-erp/src",
    "check-versions": "node scripts/check-versions.js",
    "analyze-deps": "node scripts/analyze-dependencies.js",
    "audit-coverage": "node scripts/audit-test-coverage.js",
    "site:dev": "pnpm --filter @objectql/site run dev",
    "site:build": "pnpm --filter @objectql/site run build",
    "site:start": "pnpm --filter @objectql/site run start",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@objectql/example-enterprise-erp": "workspace:*",
    "@objectql/example-project-tracker": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "turbo": "^2.3.3",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitepress": "^1.6.4"
  },
  "version": "4.0.0",
  "dependencies": {
    "build": "^0.1.4"
  }
}
